#!/usr/bin/env ruby
mapping = {
  '2015-01' => :str
}

mapping.each do |day, type|
  %w[1 2].each do |part|
    puts "#{day}-#{part}.$(ARCHITECTURE).s: #{day}.inc"
    puts "#{day}-#{part}-ref.c: #{day}-ref.h"
  end
  puts "#{day}.inc: #{day}.txt txt2#{type}; ./txt2#{type} $< > $@"
  puts "#{day}-ref.h: #{day}.txt txt2#{type}-ref; ./txt2#{type}-ref $< > $@"
end
